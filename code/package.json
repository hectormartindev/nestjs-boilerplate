{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "description": "BoilerPlate",
  "author": "Héctor Martín",
  "license": "Custom",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "npx prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "rimraf dist && nest start",
    "start:dev": "rimraf dist && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typecheck": "tsc",
    "lint": "npx eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest -w=75%",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:unit": "jest --forceExit --detectOpenHandles --config ./test/jest-unit.json",
    "orm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/database/ormconfig.ts",
    "migration:generate": "npm run orm migration:generate -- -n",
    "migration:create-empty": "npm run orm migration:create -- -n",
    "migration:run": "npm run orm migration:run",
    "migration:revert": "npm run orm migration:revert",
    "precommit": "rimraf dist && npm run typecheck && npm run format && npm run lint && npm run test",
    "seed": "ts-node ./database/seeders/seeder.ts"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.17",
    "@nestjs/core": "^7.6.17",
    "@nestjs/platform-express": "^7.6.17",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/terminus": "^7.2.0",
    "@nestjs/typeorm": "^7.1.5",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.1",
    "leaked-handles": "^5.2.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "swagger-ui-express": "^4.1.6",
    "tldts": "^5.7.38",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.1",
    "@nestjs/testing": "^7.6.17",
    "@types/express": "^4.17.12",
    "@types/jest": "26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.2",
    "@types/node-fetch": "^2.5.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".(e2e-)?spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/test/setEnvVars.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!/node_modules/",
      "!src/**/*.builder.*.{js,ts}",
      "!src/**/*.dto.{js,ts}",
      "!src/**/*.dto.*.{js,ts}",
      "!src/**/*.enum.{js,ts}",
      "!src/**/*.entity.*.{js,ts}",
      "!src/**/*.module.*.{js,ts}",
      "!src/**/mocks/*",
      "!src/main.ts",
      "!src/*.config.ts",
      "!src/database/migrations/*.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
